{
	"info": {
		"_postman_id": "aml-graph-system-api",
		"name": "AML Graph System API",
		"description": "Real-time fraud detection using graph features and machine learning",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/health",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"health"
					]
				},
				"description": "Check API and Neo4j connectivity status"
			},
			"response": []
		},
		{
			"name": "Get Sample Accounts",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/accounts/sample?limit=10",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"accounts",
						"sample"
					],
					"query": [
						{
							"key": "limit",
							"value": "10",
							"description": "Number of accounts to return"
						}
					]
				},
				"description": "Get sample account IDs with their graph features (pagerank, degree, betweenness)"
			},
			"response": []
		},
		{
			"name": "Get Sample Transactions",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/transactions/sample?limit=10",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"transactions",
						"sample"
					],
					"query": [
						{
							"key": "limit",
							"value": "10",
							"description": "Number of transactions to return"
						}
					]
				},
				"description": "Get real transactions from Neo4j with account IDs, amounts, and fraud labels"
			},
			"response": []
		},
		{
			"name": "Get Fraud Samples",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/transactions/fraud-samples?limit=5",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"transactions",
						"fraud-samples"
					],
					"query": [
						{
							"key": "limit",
							"value": "5",
							"description": "Number of fraud transactions to return"
						}
					]
				},
				"description": "Get known fraud transactions for testing model accuracy"
			},
			"response": []
		},
		{
			"name": "Get Normal Samples",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/transactions/normal-samples?limit=5",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"transactions",
						"normal-samples"
					],
					"query": [
						{
							"key": "limit",
							"value": "5",
							"description": "Number of normal transactions to return"
						}
					]
				},
				"description": "Get known normal (non-fraud) transactions for testing"
			},
			"response": []
		},
		{
			"name": "Score Transaction",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"amount\": 5000.0,\n  \"nameOrig\": \"C1231006815\",\n  \"nameDest\": \"C1666544295\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/score",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"score"
					]
				},
				"description": "Score a transaction for fraud risk. Returns risk_score between 0.0 (safe) and 1.0 (fraud)"
			},
			"response": []
		},
		{
			"name": "Score High-Value Transaction",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"amount\": 10000000.0,\n  \"nameOrig\": \"C1231006815\",\n  \"nameDest\": \"C1666544295\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/score",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"score"
					]
				},
				"description": "Example: Score a high-value transaction"
			},
			"response": []
		},
		{
			"name": "Score Low-Value Transaction",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"amount\": 100.0,\n  \"nameOrig\": \"C1231006815\",\n  \"nameDest\": \"C1666544295\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/score",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"score"
					]
				},
				"description": "Example: Score a low-value transaction"
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000",
			"type": "string"
		}
	]
}
